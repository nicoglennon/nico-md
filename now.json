{
  "version": 2,
  "name": "Nico Glennon",
  "alias": "nico.gl",
  "builds": [
    {
      "src": "*.css",
      "use": "@now/static"
    },
    {
      "src": "*.jpg",
      "use": "@now/static"
    },
    {
      "src": "*.ico",
      "use": "@now/static"
    },
    {
      "src": "**/*.md",
      "use": "@now/md",
      "config": {
        "title": "Nico Glennon",
        "language": "en",
        "meta": [
          { "property": "description", "content": "I design & code things." },
          { "property": "og:url", "content": "https://nico.gl" },
          { "property": "og:type", "content": "website" },
          { "property": "og:title", "content": "Nico Glennon" },
          {
            "property": "og:description",
            "content": "I design & code things."
          },
          {
            "property": "og:image",
            "content": "https://i.pinimg.com/originals/e7/4b/87/e74b87ef8486bc21ecfdf2e036999ad2.gif"
          },
          { "property": "twitter:card", "content": "summary_large_image" },
          { "property": "twitter:url", "content": "https://nico.gl" },
          { "property": "twitter:title", "content": "Nico Glennon" },
          { "property": "twitter:description", "content": "Hi! I'm Nico" },
          {
            "property": "twitter:image",
            "content": "https://i.pinimg.com/originals/e7/4b/87/e74b87ef8486bc21ecfdf2e036999ad2.gif"
          }
        ],
        "css": "/style.css"
      }
    }
  ]
}
